package com.ustglobal.phonesimulatorapp.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.ustglobal.phonesimulatorapp.dto.PhoneSimulatorDto;

public class PhoneSimulatorDaoImpl implements PhoneSimulatorDao {
	private final static String CLASS_DRIVER = "com.mysql.jdbc.Driver";
	private final static String URL = "jdbc:mysql://localhost:3306/contactfile?user=root&password=root";
	private final static String SELECT_ALL_QUERY ="select * from contact";
	private final static String SELECT_QUERY = "select * from contact where name =?";
	private final static String INSERT_QUERY = "insert into contact values(?,?,?)"; 
	private final static String DELETE_QUERY ="delete from contact where name=?";
	@Override
	public List<PhoneSimulatorDto> showAllContact() {
		Connection conn = null;
		Statement stmt = null;
		ResultSet rs = null;

		String sql = SELECT_ALL_QUERY;
		try {
			Class.forName(CLASS_DRIVER);
			conn = DriverManager.getConnection(URL);
			stmt = conn.createStatement();
			rs = stmt.executeQuery(sql);
			ArrayList<PhoneSimulatorDto> result = new ArrayList<PhoneSimulatorDto>();
			while (rs.next()) {
				PhoneSimulatorDto dto = new PhoneSimulatorDto();
				String name = rs.getString("name");
				dto.setName(name);
				int number = rs.getInt("number");
				dto.setNumber(number);
				String groups = rs.getString("groups");
				dto.setGroups(groups);

				result.add(dto);
			}
			return result;

		} catch (Exception e) {
			e.printStackTrace();
			return null;
		} finally {
			try {
				if (conn != null)
					conn.close();
				if (stmt != null)
					stmt.close();
				if (rs != null)
					rs.close();
			} catch (Exception e2) {
				e2.printStackTrace();
			}

		}
	}// end of showAllContacts()

	@Override
	public PhoneSimulatorDto searchContact(String name) {
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;

		String sql = SELECT_QUERY;
		try {
			Class.forName(CLASS_DRIVER);
			conn = DriverManager.getConnection(URL);
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, name);
			rs = pstmt.executeQuery();

			PhoneSimulatorDto dto1 = new PhoneSimulatorDto();
			if (rs.next()) {
				String name1 = rs.getString("name");
				dto1.setName(name1);
				int number1 = rs.getInt("number");
				dto1.setNumber(number1);
				String groups1 = rs.getString("groups");
				dto1.setGroups(groups1);

			}

			return dto1;
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		} finally {
			try {
				if (conn != null)
					conn.close();
				if (pstmt != null)
					pstmt.close();
				if (rs != null)
					rs.close();
			} catch (Exception e2) {
				e2.printStackTrace();
			}
		}

	}// end of searchContact

	@Override
	public int addContact(PhoneSimulatorDto dto) {
		Connection conn = null;
		PreparedStatement pstmt = null;

		String sql = INSERT_QUERY;
		try {
			Class.forName(CLASS_DRIVER);
			conn = DriverManager.getConnection(URL);
			pstmt = conn.prepareStatement(sql);

			pstmt.setString(1, dto.getName());
			pstmt.setInt(2, dto.getNumber());
			pstmt.setString(3, dto.getGroups());

			int count = pstmt.executeUpdate();

			return count;
		} catch (Exception e) {
			e.printStackTrace();
			return 0;
		} finally {
			try {
				if (conn != null)
					conn.close();
				if (pstmt != null)
					pstmt.close();

			} catch (Exception e2) {
				e2.printStackTrace();
			}
		}

	}// end of addContact()

	@Override
	public int deleteContact(String name) {
		Connection conn = null;
		PreparedStatement pstmt = null;

		String sql = 
		try {
			Class.forName(CLASS_DRIVER);
			conn = DriverManager.getConnection(URL);
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, name);
			int count = pstmt.executeUpdate();

			return count;
		} catch (Exception e) {
			e.printStackTrace();
			return 0;
		} finally {
			try {
				if (conn != null)
					conn.close();
				if (pstmt != null)
					pstmt.close();

			} catch (Exception e2) {
				e2.printStackTrace();

			}
		}

	}// end of deleteContact()

	@Override
	public int editContact(PhoneSimulatorDto dto) {
		Connection conn = null;
		PreparedStatement pstmt = null;

		String sql = "update contact set number=? , groups=? where name =?";
		try {
			Class.forName(CLASS_DRIVER);
			conn = DriverManager.getConnection(URL);
			pstmt = conn.prepareStatement(sql);

			pstmt.setInt(1, dto.getNumber());
			pstmt.setString(2, dto.getGroups());
			pstmt.setString(3, dto.getName());

			int count = pstmt.executeUpdate();

			return count;
		} catch (Exception e) {
			e.printStackTrace();
			return 0;
		} finally {
			try {
				if (conn != null)
					conn.close();
				if (pstmt != null)
					pstmt.close();

			} catch (Exception e2) {
				e2.printStackTrace();

			}
		}
	}
}// end of class
